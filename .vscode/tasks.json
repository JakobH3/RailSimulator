            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "isDefault": true,
                "kind": "build",
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}